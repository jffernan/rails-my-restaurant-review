<fieldset>
<legend>
  <h3>All Restaurants Reviewed (Click on a 'link'):</h3>
</legend>
<ul>
  <% @reviews.each do |review| %>
    <li>
      <%= link_to review.try(:restaurant).try(:name), review %>
      &ensp;
      (Submitted <%= time_ago_in_words(review.updated_at) %> ago.)
    </li>
  <% end %>
</ul>
</fieldset>
</br>
<%= link_to "Back", root_path %>
<% if logged_in? %>
  <%= link_to "User Page", user_path(current_user) %>
<% end %>
<%= link_to "See Reviews", reviews_path %>
<%= link_to "Top Reviews", reviews_path(rating: "Excellent") %>
