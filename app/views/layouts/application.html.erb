<!DOCTYPE html>
<html>
  <head>
    <title>My Restaurant Review</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to "Home", root_path %>
      <%= link_to "Restaurant Reviews", @reviews_path %>
      <% if logged_in? %>
        <%= link_to "#{current_user.email}", user_path(current_user) %>
        <%= link_to "New Review", new_review_path %>
        <%= link_to "See Users", users_path %>
        <%= link_to "Settings", edit_user_path(current_user) %>
        <%= link_to "Log out", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Sign Up", signup_path %>
      <% end %>

      <% flash.each do |name, msg| -%>
        <strong><%= content_tag :div, msg, class: name %></strong>
      <% end -%>
    </nav>

    <div class = "container">
      <h1>My Restaurant Review</h1>
      <%= yield %>
    </div>
  </body>
</html>
