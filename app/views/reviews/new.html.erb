<fieldset>
<legend>
  <h3>Create New Review</h3>
</legend>
<%= render 'form' %>
<script>
$(function(){
    $("input").focus(function(){
        $(this).css("background-color", "#cccccc");
    });
    $("input").blur(function(){
        $(this).css("background-color", "#ffffff");
    });
});
</script>

<div id="reviewResult">
  <h4 id="restaurantName"></h4>
  <p id="reviewBody"></p>
  <p id="reviewCuisines"></p>
  <p id="reviewRating"></p>
  <p id="reviewDateVisited"></p>
  <h4 id="reviewThankYou"></h4>
</div>
<div class="reviewLink"></div>
<script type="text/javascript" charset="utf-8">
$(function () {
    $('form').submit(function(event) {
      //prevent form from submitting the default way
      event.preventDefault();
      var values = $(this).serialize();
      var posting = $.post('/reviews', values);
      posting.done(function(data) {
        $('#restaurantName').css({ 'font-weight': 'bold' });
        $("#restaurantName").text("Your Review Saved For: " + data["restaurant"]["name"] + '.');
        $("#reviewBody").text("You commented: " + '"' + data["content"] + '".');
        //$("#reviewCuisines").val(review["cuisine"]["name"]);
        $(function(){
// New showRating method created via jQuery on Review PROTOTYPE w/ bold formats on rating & name attributes.
          $.extend({
            showRating: function() {
              var txt1 = 'You gave "';
              var txt2 = $("<b></b>").text(data["rating"]); // Create text with jQuery
              var txt3 = '" rating for ';
              var txt4 = $("<b></b>").text(data["restaurant"]["name"] + '.'); // Create text with jQuery
              $('#reviewRating').append(txt1, txt2, txt3, txt4);      // Append text to Review Rating message
            }
          });
          $.showRating();
        });
        var txt1 = "THANK YOU for posting at ";
        var txt2 = $("<b></b>").text("My Restaurant Review!"); // Create text with jQuery
        $('#reviewThankYou').append(txt1, txt2);               // Append text to Thank you Paragraph
        $(".reviewLink").html("<a href='/reviews/"+data['id'].toString()+"'>Continue To Review Page</a>");
      });
    });
  });
  </script>
  </fieldset>
