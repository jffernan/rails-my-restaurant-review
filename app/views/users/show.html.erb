<fieldset>
<legend>
  <h3>User Page</h3>
</legend>
<ul>
<li>Current User Email: <%= @user.email %></li>
  <br/>
  <% if @user.reviews.any? %>
    <li>Restaurant Reviews Submitted (Total: <%= @user.reviews.count %>)
    </li>
  <br/>
      <ol>
        <%= render @reviews %>
      <br/>
      </ol>
  <% end %>
<% if current_user == @user %>
  <li><%= link_to "Submit New Review", new_review_path %></li>
  <br/>
  <li> Change User Settings:
    <%= link_to "Edit User", edit_user_path %>
  </li>
<% end %>
</ul>
</fieldset>
<br/>
<%= link_to 'Back', root_path %>
<%= link_to "All Users", users_path %>
<%= render 'links' %>
